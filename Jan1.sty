\textheight 297mm
\advance\textheight -2in
%\advance\textheight -\topmargin
%\advance\textheight -\headheight
%\advance\textheight -\headsep
\advance\textheight -\footskip
\parindent 0mm
\parskip 2mm plus 1pt
\setlength{\voffset}{-2.5 cm}

\@addtoreset{equation}{section}
\def\theequation{\thesection.\arabic{equation}}

\newtheorem{stelling}{Stelling}[section]
\let\pi@stelling=\stelling
\def\stelling{\pi@stelling\hfill\\\noindent}
%\let\pi@endstelling=\endstelling
%\def\endstelling{\unskip\hfill\rule{2mm}{2mm}\pi@endstelling}
%\newenvironment{bewys}{\par\noindent\bf Bewys:\\\noindent\rm}{}
\newenvironment{bewys}{\begin{description}\item[Bewys:]\ \\\rm}{\ifvmode\else\unskip\fi\hfill\rule{2mm}{2mm}\end{description}}

\newtheorem{probleem}{Probleem}[section]
\let\pi@probleem=\probleem
\def\probleem{\pi@probleem\hfill\\\noindent}
%\let\pi@endprobleem=\endprobleem
%\def\endprobleem{\unskip\hfill\mbox{$\Box$}\pi@endprobleem}
%\newenvironment{oplossing}{\par\noindent\bf Oplossing:\\\noindent\rm}{}
\newenvironment{oplossing}{\begin{description}\item[Oplossing:]\ \\\rm}{\ifvmode\else\unskip\fi\hfill\mbox{$\Box$}\end{description}}

\newcounter{subequation}
\def\thesubequation{\alph{subequation}}
\def\subeq{\stepcounter{subequation}%
\global\let\@currentlabel=\thesubequation%
\global\let\pi@eqnnum=\@eqnnum%
\global\def\@eqnnum{{\rm (\thesubequation)}\global\let\@eqnnum=\pi@eqnnum}%
\addtocounter{equation}{-1}}
\def\resetsubeq{\setcounter{subequation}{0}}
\@addtoreset{subequation}{probleem}

\setcounter{secnumdepth}{1}
\setcounter{tocdepth}{2}

\def\thefigure{\thesection.\@arabic\c@figure}
\@addtoreset{figure}{section}
\def\thetable{\thesection.\@arabic\c@table}
\@addtoreset{table}{section}
\def\Ref#1{(\ref{#1})}

\long\def\belangrik#1{{%
   \leavevmode\vskip5mm\noindent
   \hbox to\textwidth{\hfil
      \fboxsep=5mm
      \fbox{%
         \vbox{%
            \hsize=\textwidth
            \advance\hsize -2\fboxsep
            \advance\hsize -2\fboxrule
            \advance\hsize -2cm\noindent\em #1
            }%
         }%
      \hfil}%
   \vskip1mm}\noindent}

\def\@makechapterhead#1{ \vspace*{50pt} { \parindent 0pt \raggedright
 \ifnum \c@secnumdepth >\m@ne \LARGE \bf \@chapapp{} \thechapter \par
 \vskip 20pt \fi \Huge \bf #1\par
 \nobreak \vskip 40pt } }

\def\bold#1{\mbox{\boldmath$#1$\unboldmath}}                 %  $ ... $
\def\Bold#1{\mbox{\boldmath$\displaystyle #1$\unboldmath}}   % $$ ... $$

\def\degrees{\ifmmode^\circ\else$^\circ$\fi}

